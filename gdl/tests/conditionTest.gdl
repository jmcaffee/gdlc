//include ("simple.gdl");
ppm	numeric	app     ppmVar;

//import( lookup, "TestLookups.csv" );				// Import the lookup CSV file

rule SimpleConditionRule1()							// Define the rule.
	if ( ppmVar == 1 )	
	then
		condition(asset, docs, 		"Test PriorTo docs condition message.");
		condition(asset, funding, 	"Test PriorTo funding condition message.");
		condition(asset, approval, 	"Test PriorTo approval condition message.");
	end
end


guideline ("ConditionTestGuideline")
	rule 			SimpleConditionRule1();
end

